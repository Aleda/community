<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- mapping文件用来配置entity和table -->
	<class name="cn.aleda.hibernate.entity.Message" table="t_messages" catalog="community">
		<id name="id" column="id">
			<generator class="increment"></generator>
		</id>
		<property name="send_name" column="send_name"></property>
		<property name="receive_name" column="receive_name"></property>
		<property name="message" column="message"></property>
		<property name="create_time" column="create_time"></property>
		<property name="isread" column="isread"></property>
	</class>
</hibernate-mapping>
